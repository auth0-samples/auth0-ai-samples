{
  "name": "task-vantage-demo",
  "version": "1.0.0",
  "description": "Demo project for Task Vantage with a REST API (Hono), MCP server (Hono + mcp-handler + Auth0), and Agent integration.",
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "src/mcp/index.js",
  "scripts": {
    "dev:api": "node src/api/index.js",
    "dev:mcp": "node src/mcp/index.js",
    "dev:agent": "node src/agent/index.js",
    "dev:webapp": "node src/webapp/index.js",
    "dev:agent:watch": "node --watch src/agent/index.js",
    "dev:webapp:watch": "node --watch src/webapp/index.js",
    "dev:all": "npm-run-all --parallel dev:api dev:mcp dev:agent dev:webapp open:webapp open:agent",
    "open:agent": "open http://localhost:3000",
    "open:webapp": "open http://localhost:3001",
    "start": "npm run dev:all",
    "deploy:api": "cp -r src vercel/api/ && cp package*.json vercel/api/ && cd vercel/api && vercel link --project task-vantage-api --yes && vercel --prod --yes",
    "deploy:mcp": "cp -r src vercel/mcp/ && cp package*.json vercel/mcp/ && cd vercel/mcp && vercel link --project task-vantage-mcp --yes && vercel --prod --yes",
    "deploy:agent": "cp -r src vercel/agent/ && cp package*.json vercel/agent/ && cd vercel/agent && vercel link --project task-vantage-agent --yes && vercel --prod --yes",
    "deploy:webapp": "cp -r src vercel/webapp/ && cp package*.json vercel/webapp/ && cd vercel/webapp && vercel link --project task-vantage-webapp --yes && vercel --prod --yes",
    "deploy:all": "npm-run-all --sequential deploy:api deploy:mcp deploy:agent deploy:webapp",
    "bootstrap:api": "vercel link --project task-vantage-api",
    "bootstrap:mcp": "vercel link --project task-vantage-mcp",
    "bootstrap:agent": "vercel link --project task-vantage-agent",
    "bootstrap:webapp": "vercel link --project task-vantage-webapp",
    "bootstrap:all": "npm-run-all --sequential bootstrap:api bootstrap:mcp bootstrap:agent bootstrap:webapp",
    "deploy:parallel": "npm-run-all --parallel deploy:api deploy:mcp deploy:agent deploy:webapp",
    "logs:api": "vercel logs task-vantage-api.vercel.app",
    "logs:mcp": "vercel logs task-vantage-mcp.vercel.app",
    "logs:agent": "vercel logs task-vantage-agent.vercel.app",
    "logs:webapp": "vercel logs task-vantage-webapp.vercel.app",
    "logs:all": "npm-run-all --parallel logs:api logs:mcp logs:agent logs:webapp",
    "open:deployed:api": "vercel open --project task-vantage-api",
    "open:deployed:mcp": "vercel open --project task-vantage-mcp",
    "open:deployed:agent": "vercel open --project task-vantage-agent",
    "open:deployed:webapp": "vercel open --project task-vantage-webapp",
    "open:deployed:all": "npm-run-all --parallel open:deployed:api open:deployed:mcp open:deployed:agent open:deployed:webapp"
  },
  "dependencies": {
    "@auth0/auth0-api-js": "^1.0.2",
    "@auth0/auth0-hono": "^1.2.4",
    "@hono/node-server": "^1.19.3",
    "@llamaindex/openai": "^0.4.18",
    "@llamaindex/workflow": "^1.1.22",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "dotenv": "^17.2.2",
    "hono": "^4.9.6",
    "llamaindex": "^0.11.28",
    "mcp-handler": "^1.0.2",
    "redis": "^5.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "vercel": "^48.0.3",
    "vercel-open": "^1.1.17"
  },
  "engines": {
    "node": ">=22"
  }
}
